<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/metal_texture"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/calculator_screen_text_view"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="16dp"
        android:background="@drawable/white"
        android:gravity="bottom|end"
        android:singleLine="true"
        android:textSize="70sp" />


    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_clean"
            android:layout_marginStart="10dp"
            android:background="@drawable/orange"
            android:gravity="center"
            android:text="@string/text_btn_c"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_del"
            android:layout_marginStart="10dp"
            android:layout_span="2"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_del"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_divide"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="1"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_slash"
            android:textSize="25sp" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_7"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_7"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_8"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_8"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_9"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_9"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_multiply"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_star"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_4"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_4"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_5"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_5"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_6"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_6"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_add"
            android:textSize="25sp" />
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_1"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_1"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_2"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_2"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_3"
            android:layout_marginStart="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_3"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_minus"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_minus"
            android:textSize="25sp" />

    </TableRow>


    <TableRow
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_0"
            android:layout_marginStart="10dp"
            android:layout_span="2"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_0"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_point"
            android:layout_marginStart="10dp"
            android:layout_span="1"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_point"
            android:textSize="25sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_equal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_span="1"
            android:background="@drawable/white"
            android:gravity="center"
            android:text="@string/text_btn_equal"
            android:textSize="25sp" />


    </TableRow>

</TableLayout>